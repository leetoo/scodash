# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
GET         /                           controllers.ApplicationScala.index
GET         /dashboard/:hash            controllers.ApplicationScala.dashboard(hash)
GET         /ws/:hash                   controllers.ApplicationScala.ws(hash)
GET         /showNewDashboard           controllers.ApplicationScala.showNewDashboard
POST        /processNewDashboard        controllers.ApplicationScala.processNewDashboard
GET         /showDashboardItems         controllers.ApplicationScala.showDashboardItems
POST        /addItem                    controllers.ApplicationScala.addItem
POST        /removeItem                 controllers.ApplicationScala.removeItem
GET         /showDashboardOwner         controllers.ApplicationScala.showDashboardOwner
POST        /processDashboardOwner      controllers.ApplicationScala.processDashboardOwner


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file               controllers.Assets.at(path="/public", file)

    